<?php
require("../includes/config2.php");

class Price
{
  public $noerror=false;
  public $price;
}
$price=new Price();
//$index=$_GET['index'];
$index=$_POST['index'];
$sql="SELECT symbol FROM portfolio WHERE id='{$index}'";
if(($symbol=mysqli_fetch_array(mysqli_query($con,$sql)))!==FALSE)
  {

    if($symbol[0]!=null)
      {
	$handle=fopen("http://download.finance.yahoo.com/d/quotes.csv?f=l1&s=".$symbol[0],"r");
	if($handle!==FALSE)
	  {
		$price->noerror=true;
		$rate=fgetcsv($handle);
		$price->price=$rate;
	  }
	fclose($handle);
      }
  }
print(json_encode($price)); 
?>